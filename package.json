{
  "name": "lhd-graphql-server",
  "version": "0.1.0",
  "description": "GraphQL server for the LHD MySQL database",
  "main": "index.ts",
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express5": "^1.1.2",
    "@mercurialweb/nexus-plugin-prisma": "0.49.2",
    "@prisma/client": "^5.12.1",
    "chai": "^4.3.8",
    "crypto-js": "^4.2.0",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "5",
    "express-session": "^1.17.3",
    "graphql": "^16.12.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "mysql": "^2.18.1",
    "nexus": "^1.2.0",
    "nexus-prisma": "^2.0.5",
    "node-fetch": "^2.6.1",
    "nodemailer": "^7.0.9",
    "prisma": "^5.12.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.20",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.65",
    "@types/nodemailer": "^7.0.2",
    "debug": "^4.3.2",
    "keycloak-connect": "^19.0.2",
    "mocha": "^9.1.1"
  },
  "scripts": {
    "prepublish": "if [ -z \"$INSTALL_ONLY\" ] ; then yarn codegen ; fi",
    "codegen": "yarn prisma:generate && yarn nexus:reflect",
    "prisma:generate": "prisma generate",
    "nexus:reflect": "env DO_TYPEGEN=1 ts-node --transpile-only nexus/schema.ts",
    "clean": "yarn nexus:clean",
    "nexus:clean": "rm -rf node_modules/@types/typegen-nexus*",
    "start": "sh -c 'node \"$@\" -r ts-node/register index.ts' -- ",
    "test": "scripts/run-tests \"$@\""
  },
  "keywords": [
    "LHD",
    "GraphQL",
    "nexus",
    "prisma"
  ],
  "author": "EPFL ISAS-FSD <isas-fsd@groupes.epfl.ch>",
  "license": "ISC",
  "packageManager": "yarn@1.22.22"
}
